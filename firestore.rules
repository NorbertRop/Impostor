rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isHost(roomId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.hostUid == request.auth.uid;
    }

    match /rooms/{roomId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.hostUid == request.auth.uid;
      allow update, delete: if request.auth != null && isHost(roomId);

      match /players/{uid} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == uid;
        allow update: if request.auth != null && (request.auth.uid == uid || isHost(roomId));
        allow delete: if request.auth != null && (request.auth.uid == uid || isHost(roomId));
      }

      match /secrets/{uid} {
        allow read: if request.auth != null && request.auth.uid == uid;
        allow create, update: if request.auth != null && isHost(roomId);
        allow delete: if request.auth != null && isHost(roomId);
      }
    }
  }
}

